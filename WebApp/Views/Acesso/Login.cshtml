@model WebApp.ViewModels.AcessoViewModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="container">

        <div class="panel panel-inverse col-md-6 col-md-offset-3 logo-panel">
            <div class="panel-body">
                <img src="~/Content/Imagens/LogoIVIABranco.png" class="img-responsive center-block" />
            </div>
        </div>
        <div class="panel col-md-6 col-md-offset-3">
            <div class="panel-body">
                    @using (Html.BeginForm("Login", "Acesso", new { }, FormMethod.Post, new { @class = "form-horizontl", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="col-lg-8 col-lg-offset-2">
                        @Html.ValidationSummary(true,string.Empty, new { @class="alert alert-danger"})


                            <div class="form-group">
                                @Html.TextBoxFor(m => m.User, new { @class = "form-control ", placeholder = "Login...", required = "true" })
                                @Html.ValidationMessageFor(m => m.User, string.Empty,new { @class="label label-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Senha...", required = "true" })
                                @Html.ValidationMessageFor(m => m.Senha, string.Empty, new { @class = "label label-danger" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.Sede, Model.Sedes, new { @class = "form-control" })
                            </div>
                            <div class="form-group col-lg-offset-4">
                                <input type="submit" value="Entrar" class="btn btn-primary" />
                            </div>                       
                        </div>

                    }
            </div>
        </div>
    </div>
</body>
</html>